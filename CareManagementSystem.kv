#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition
#: import SlideTransition kivy.uix.screenmanager.CardTransition

<MainGrid>:

    name: 'Main'

    canvas.before:
        Rectangle:
            pos: 0,0
            size: self.size
            # source: 'Images/Canvases/GUIMenuOne.png'
            source: 'GUIEdits/Temp_Mid_BCK.png'

    Image:
        pos: 0,0
        size: self.size
        source: 'GUIEdits/MainInterfaceBody.png'

    GridLayout:

        rows: 3

        Label:
            size_hint: 1, 1.338
            text: ""

        BoxLayout:
            #box --- 852.95, 214.35
            #midButtons_________________________________________-
            size_hint: 1, 1.338

            Label:
                text: ""
                size_hint: 0.168, 0.75181
                pos_hint: {"center_y": 0.5}
            RelativeLayout: ###leftButton____________
                size_hint: 0.1890, 0.58899
                pos_hint: {"center_y": 0.545}
                Button:
                    on_press: root.left_click()
                    size:self.parent.size
                    background_color: 0,0,0,0
                Image:
                    source: 'Images/Buttons/MainMenu/White.png'
                    size: self.parent.size

            Label:
                text: ""
                size_hint: 0.0209, 0.75181
                pos_hint: {"center_y": 0.5}

            Button: #################### Mid Button

                size_hint: 0.2486, 0.75181
                pos_hint: {"center_y": root.mid_an_pos}
                background_color: 0,0,0,0

                on_release:
                    root.animate_button(self)
                    app.root.transition = SlideTransition(direction='left')
                    app.root.current = 'Screen_Bulletin'

                Image:
                    source: "Images/Buttons/MainMenu/White.png"
                    size: self.parent.size
                    pos: self.parent.pos
                    #create two layers - animate top image
                    #recreate each element in individual project - 1280 x 720 seemed to work for blurryness

                RelativeLayout:
                    size: self.parent.size
                    pos: self.parent.pos

                    Label:
                        text: "Daily Bulletin"
                        font_size: 26.5
                        color: 0.7569, 0.1216, 16.47, 1
                        font_name: 'Fonts/Righteous-Regular.ttf'
                        bold: True
                        pos_hint: {'center_x': 0.62, 'center_y': 0.78}

                    Image:
                        source: "Images/Buttons/MainMenu/Buttons_MidButton/MidButton_Logo.png"
                        size: self.parent.size
                        pos_hint: {"center_x": 0.49}

            Label:
                text: ""
                size_hint: 0.0232, 0.75181
                pos_hint: {"center_y": 0.5}

            RelativeLayout: ###### Right Button
                size_hint: 0.1890, 0.58899
                pos_hint: {"center_y": 0.545}
                Button:
                    on_press: root.right_click()
                    size:self.parent.size
                    background_color: 0,0,0,0
                Image:
                    source: 'Images/Buttons/MainMenu/White.png'
                    size: self.parent.size
            Label:
                text: ""
                size_hint: 0.1668, 0.75181
                pos_hint: {"center_y": 0.5}

        Label:
            size_hint: 1, 1.085
            text: ""


<Screen_Bulletin>:

    name: 'Screen_Bulletin'

    canvas.before:
        Rectangle:
            pos: 0,0
            size: self.size
            # source: "Images/Canvases/GUIBulletinMenu_NoGrad.png"
            source: 'GUIEdits/Temp_Right_BCK.png'

    Image:
        source: 'GUIEdits/ELEMENT_BulletinBoard.png'
        size: self.size

    BoxLayout:
        orientation: 'vertical'
        Button:
            size_hint: 1, 0.237
            on_release:
                app.root.transition = SlideTransition(direction='right')
                app.root.current = 'Main'
            background_color: 1, 1, 1, 0

        BoxLayout:
            size_hint: 1, 0.707
            Label:
                size_hint_x: 0.041

            ScrollView: #           ~BulletinBoard~
                size_hint_x: 0.919

                StackLayout:
                    id: bulletin_board
                    orientation: 'tb-lr'
                    size_hint_x: None
                    width: self.minimum_width

            Label:
                size_hint_x: 0.04

        Button:
            size_hint: 1, 0.056
            background_color: 1, 1, 1, 0.1
            on_press:
                app.root.current = 'Main'


<Screen3>:

    name: 'Three'

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Images/Canvases/GUIMenuOne.png'

    Button:
        text: 'test'
        on_press:
            app.root.current = 'Four'

<Screen4>:

    name: 'Four'

    Button:
        text: 'test'
        on_press:
            app.root.current = 'Main'
